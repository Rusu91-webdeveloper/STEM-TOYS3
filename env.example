# Application
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/nextcommerce"

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET="generate-a-secure-random-secret-here"

# Admin User (used for seeding and development-only auth)
ADMIN_EMAIL=admin@example.com
ADMIN_NAME="Admin User"
# RECOMMENDED APPROACH - Use a secure hash instead of plaintext password:
ADMIN_PASSWORD_HASH="generate-this-using-admin-auth-utils"
# LEGACY APPROACH - Not recommended for production (will be removed in future):
# ADMIN_PASSWORD="change-this-to-a-secure-password" 
USE_ENV_ADMIN=false

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Security
ENCRYPTION_KEY="32-character-encryption-key-for-data"
CSRF_SECRET_KEY="strong-csrf-secret-key-for-tokens"

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PUBLIC_KEY=your-stripe-public-key

# Email Services
RESEND_API_KEY=your-resend-api-key
BREVO_API_KEY=your-brevo-api-key

# File Upload
UPLOADTHING_SECRET=your-uploadthing-secret
UPLOADTHING_APP_ID=your-uploadthing-app-id

# Redis (for caching)
REDIS_URL=your-redis-url
UPSTASH_REDIS_REST_URL=your-upstash-redis-rest-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-rest-token
REDIS_TIMEOUT=5000  # Timeout in milliseconds for Redis operations

# Site Configuration
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Prisma Accelerate (Optional)
# PRISMA_ACCELERATE_URL="your-prisma-accelerate-url"

# Security (Optional)
ALLOWED_ORIGINS="http://localhost:3000,https://techtots.com"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"

# SEO Verification (Optional)
GOOGLE_VERIFICATION_CODE="your-google-verification-code"
BING_VERIFICATION_CODE="your-bing-verification-code"
YANDEX_VERIFICATION_CODE="your-yandex-verification-code" 