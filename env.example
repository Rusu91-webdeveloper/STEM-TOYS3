# =============================================================================
# STEM TOYS E-COMMERCE - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# CORE APPLICATION
# =============================================================================
NODE_ENV=development
NEXTAUTH_SECRET=your-super-secret-key-here-minimum-32-characters
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=2000
DATABASE_IDLE_TIMEOUT=30000

# =============================================================================
# REDIS CONFIGURATION (Upstash)
# =============================================================================
REDIS_URL=https://your-redis-url.upstash.io
REDIS_TOKEN=your-redis-token
REDIS_TIMEOUT=5000
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Choose one: Resend or Brevo
RESEND_API_KEY=your-resend-api-key
# BREVO_API_KEY=your-brevo-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1
PERFORMANCE_MAX_METRICS=1000
PERFORMANCE_RETENTION_DAYS=7
SLOW_QUERY_THRESHOLD=1000
CRITICAL_QUERY_THRESHOLD=5000

# =============================================================================
# API CACHING
# =============================================================================
API_CACHING=true
API_CACHE_TTL=300
API_CACHE_MAX_TTL=3600
API_CACHE_STALE_WHILE_REVALIDATE=60
API_CACHE_COMPRESSION=true

# =============================================================================
# AUTHENTICATION (Google OAuth)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# PAYMENT PROCESSING (Stripe)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn
SENTRY_ENVIRONMENT=development
LOG_LEVEL=info
ENABLE_ANALYTICS=false

# =============================================================================
# UPLOAD & STORAGE
# =============================================================================
UPLOADTHING_SECRET=sk_live_your-uploadthing-secret
UPLOADTHING_APP_ID=your-uploadthing-app-id

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable detailed logging in development
DEBUG=*
# Enable performance profiling
PROFILING=true
# Enable database query logging
DB_LOGGING=true

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
# Request size limits
MAX_REQUEST_SIZE=10485760

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cart cache TTL (seconds)
CART_CACHE_TTL=600
# Product cache TTL (seconds)
PRODUCT_CACHE_TTL=1800
# User session cache TTL (seconds)
SESSION_CACHE_TTL=3600

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REAL_TIME_FEATURES=false
ENABLE_AI_RECOMMENDATIONS=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_AUTOMATED_TESTING=false

# =============================================================================
# DEPLOYMENT & SCALING
# =============================================================================
# Auto-scaling configuration
ENABLE_AUTO_SCALING=false
MIN_INSTANCES=1
MAX_INSTANCES=10
# CDN configuration
CDN_ENABLED=false
CDN_URL=https://your-cdn-url.com

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Database backup configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook
# Email alerts
ALERT_EMAIL=support@yourdomain.com
# Performance alert thresholds
PERFORMANCE_ALERT_THRESHOLD=5000
ERROR_RATE_ALERT_THRESHOLD=0.05 