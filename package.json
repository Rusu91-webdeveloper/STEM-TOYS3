    "embla-carousel-react": "^8.6.0",
    "ioredis": "^5.6.1",
    "isomorphic-dompurify": "^2.25.0",
    "lucide-react": "^0.510.0",
    "next": "^15.3.5",
    "next-auth": "^5.0.0-beta.28",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "pdfkit": "^0.17.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
