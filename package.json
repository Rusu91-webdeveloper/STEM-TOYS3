{
  "name": "nextcommerce",
  "version": "0.1.0",
  "packageManager": "pnpm@9.14.4",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "rm -rf .next && next dev",
    "dev:memory": "NODE_OPTIONS=\"--max-old-space-size=2048\" next dev",
    "dev:setup": "node scripts/dev-setup.js",
    "optimize:memory": "node scripts/optimize-memory.js",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "setup:env": "node scripts/setup-env.js",
    "check:auth": "node scripts/check-auth.js",
    "check:auth-config": "node scripts/check-auth-config.js",
    "check:env": "node scripts/check-env.js",
    "test:api": "node scripts/test-api-endpoints.js",
    "db:studio": "./scripts/db-studio.sh",
    "quick:start": "./scripts/quick-start.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:visual": "playwright test tests/visual/",
    "test:visual:update": "playwright test tests/visual/ --update-snapshots",
    "test:accessibility": "playwright test tests/accessibility/",
    "test:accessibility:report": "playwright test tests/accessibility/ --reporter=html",
    "test:performance": "playwright test tests/performance/",
    "test:performance:lighthouse": "lighthouse http://localhost:3002 --output=json --output-path=./test-results/lighthouse-report.json",
    "test:errors": "playwright test tests/error-tracking/",
    "test:errors:report": "playwright test tests/error-tracking/ --reporter=html",
    "test:conversions": "playwright test tests/conversion-tracking/",
    "test:conversions:report": "playwright test tests/conversion-tracking/ --reporter=html",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "prisma generate",
    "prepare": "node -e \"if (!process.env.CI && !process.env.VERCEL) { require('child_process').execSync('husky', { stdio: 'inherit' }); }\"",
    "seed": "ts-node --project tsconfig.seed.json prisma/seed.ts",
    "seed:romanian": "npx ts-node --compiler-options \"{\\\"module\\\":\\\"CommonJS\\\"}\" prisma/seed-romanian.ts",
    "setup:romanian": "npm run seed && npm run seed:romanian",
    "seed:blogs": "npx ts-node --compiler-options \"{\\\"module\\\":\\\"CommonJS\\\"}\" prisma/seed-blogs-romanian.ts",
    "seed:books": "npx ts-node --compiler-options \"{\\\"module\\\":\\\"CommonJS\\\"}\" prisma/seed-books-romanian.ts",
    "seed:admin": "npx ts-node --compiler-options \"{\\\"module\\\":\\\"CommonJS\\\"}\" prisma/seed-admin.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:admin": "node -e \"console.log('Testing API URL utility...'); const { getApiUrl } = require('./lib/utils/api-url.ts'); console.log('API URL:', getApiUrl());\""
  },
  "prisma": {
    "seed": "ts-node --project tsconfig.seed.json prisma/seed.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md,yaml,yml}": ["prettier --write"]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@neondatabase/serverless": "^1.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/instrumentation": "^0.57.2",
    "@opentelemetry/resources": "^2.0.1",
